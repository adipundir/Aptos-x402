{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "lib/index.ts",
    "lib/utils.ts",
    "lib/x402-axios.ts",
    "lib/x402-middleware.ts",
    "lib/x402-types.ts",
    "lib/x402-protocol-types.ts",
    "lib/facilitator-client.ts",
    "lib/aptos-utils.ts",
    "lib/arc8004/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    "scripts",
    "examples",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "lib/auth.ts",
    "lib/db/**",
    "lib/storage/**",
    "lib/services/**",
    "lib/agent/**",
    "lib/encryption.ts"
  ]
}
